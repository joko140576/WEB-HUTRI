<body>

  <div class="container">
    <h1><img src="80.png" width="100" height="100" alt=""> DOORPRIZE HUT RI 80 - RT 003/RW 09</h1>

    <input type="file" id="fileInput" accept=".txt,.csv" /><br />

    <button onclick="startLottery()">PUTAR UNDIAN!</button>
    <button onclick="nextDraw()" id="nextButton" style="display: none;">UNDIAN BERIKUTNYA üîÅ</button>
    <button onclick="resetProgram()">üîÅ RESET</button>
    <button class="save-btn" onclick="saveWinners()" id="saveButton" style="display:none;">üíæ SAVE</button>

    <div id="result">‚¨ÖÔ∏è Klik tombol untuk memulai!</div>

    <!-- Tabel Pemenang -->
    <table id="winnerTable" style="display:none;">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama Pemenang</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>

  <!-- Efek & Suara -->
  <canvas id="confetti-canvas"></canvas>
  <audio id="clapSound" src="suara-undian.mp3" preload="auto"></audio>
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

  <script>
    let nameArray = [];
    let winnerCount = 0;

    document.getElementById("fileInput").addEventListener("change", function(e) {
      const file = e.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function(e) {
        const contents = e.target.result;
        nameArray = contents.split(/\r?\n/).map(n => n.trim()).filter(n => n);
        alert("Data berhasil di-upload.");
        document.getElementById("nextButton").style.display = "inline-block";
        document.getElementById("winnerTable").style.display = "table";
        document.getElementById("saveButton").style.display = "inline-block";
      };
      reader.readAsText(file);
    });

    function startLottery() {
      if (nameArray.length === 0) {
        alert("‚ùó Silakan unggah file daftar nama terlebih dahulu.");
        return;
      }
      animateAndDraw(10);
    }

    function nextDraw() {
      if (nameArray.length === 0) {
        alert("Semua nama sudah terundi.");
        return;
      }
      animateAndDraw(10);
    }

    // animateAndDraw untuk undi 10 nama sekaligus
    function animateAndDraw(numWinners) {
      const resultDiv = document.getElementById("result");
      let counter = 0;
      const duration = 2000;
      const intervalTime = 50;

      const interval = setInterval(() => {
        const randName = nameArray[Math.floor(Math.random() * nameArray.length)];
        resultDiv.textContent = randName;
        counter += intervalTime;
        if (counter >= duration) {
          clearInterval(interval);

          // Ambil pemenang sebanyak numWinners atau sisanya jika kurang
          const winnersCount = Math.min(numWinners, nameArray.length);
          const winners = [];
          for (let i = 0; i < winnersCount; i++) {
            const winnerIndex = Math.floor(Math.random() * nameArray.length);
            winners.push(nameArray[winnerIndex]);
            nameArray.splice(winnerIndex, 1);
          }

          // Tampilkan pemenang satu per satu di result
          let displayIndex = 0;
          function showWinner() {
            if(displayIndex < winners.length){
              resultDiv.innerHTML = `üéâ Pemenang: <span style="color:yellow">${winners[displayIndex]}</span>`;
              addWinnerToTable(winners[displayIndex]);
              document.getElementById("clapSound").play();
              launchConfetti();
              displayIndex++;
              setTimeout(showWinner, 1200);
            } else {
              if(nameArray.length === 0){
                alert("Semua nama sudah terundi.");
              }
            }
          }
          showWinner();
        }
      }, intervalTime);
    }

    function addWinnerToTable(name) {
      winnerCount++;
      const tableBody = document.getElementById("winnerTable").querySelector("tbody");
      const row = tableBody.insertRow();
      const cell1 = row.insertCell(0);
      const cell2 = row.insertCell(1);
      cell1.textContent = winnerCount;
      cell2.textContent = name;
    }

    function resetProgram() {
      nameArray = [];
      winnerCount = 0;
      document.getElementById("result").textContent = "‚¨ÖÔ∏è Klik tombol untuk memulai!";
      document.getElementById("nextButton").style.display = "none";
      document.getElementById("fileInput").value = "";

      const tableBody = document.getElementById("winnerTable").querySelector("tbody");
      tableBody.innerHTML = "";
      document.getElementById("winnerTable").style.display = "none";
      document.getElementById("saveButton").style.display = "none";

      alert("Program berhasil direset.");
    }

    function launchConfetti() {
      const duration = 3 * 1000;
      const end = Date.now() + duration;
      (function frame() {
        confetti({ particleCount: 5, angle: 60, spread: 55, origin: { x: 0 } });
        confetti({ particleCount: 5, angle: 120, spread: 55, origin: { x: 1 } });
        if (Date.now() < end) requestAnimationFrame(frame);
      })();
    }

    function saveWinners() {
      const tableBody = document.getElementById("winnerTable").querySelector("tbody");
      if (tableBody.rows.length === 0) {
        alert("Belum ada data pemenang untuk disimpan.");
        return;
      }
      let textToSave = "Daftar Pemenang Undian HUT PT SSI Ke-29\n\n";
      for (let i = 0; i < tableBody.rows.length; i++) {
        const row = tableBody.rows[i];
        textToSave += `${row.cells[0].textContent}. ${row.cells[1].textContent}\n`;
      }

      const blob = new Blob([textToSave], { type: "text/plain" });
      const url = URL.createObjectURL(blob);

      const a = document.createElement("a");
      a.href = url;
      a.download = "pemenang-undian-pt-ssi.txt";
      a.click();
      URL.revokeObjectURL(url);
    }
  </script>

</body>
