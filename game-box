    <header>
        <!-- Ganti src dengan gambar Anda -->
        <img src="image.png" alt="Header">
    </header>

    <div class="overlay" id="overlay" onclick="closeBox()"></div>
    <div class="question-box" id="questionBox">
        <p id="questionText">Pertanyaan muncul di sini</p>
        <button onclick="showAnswer()">Jawab</button>
        <button onclick="closeBox()">Tutup</button>
        <p class="answer" id="answerText"></p>
    </div>

    <!-- 6 Kotak Warna-warni -->
    <div class="container">
        <div class="box box-1" onclick="showQuestion(0)">Kotak 1</div>
        <div class="box box-2" onclick="showQuestion(1)">Kotak 2</div>
        <div class="box box-3" onclick="showQuestion(2)">Kotak 3</div>
        <div class="box box-4" onclick="showQuestion(3)">Kotak 4</div>
        <div class="box box-5" onclick="showQuestion(4)">Kotak 5</div>
        <div class="box box-6" onclick="showQuestion(5)">Kotak 6</div>
    </div>

    <script>
        const questions = [
            "Siapakah nama Presiden ke 4 Republik indonesia ?",
            "sebutkan sila ke 4 pancasila ?",
            "Siapakah yang memiliki gelar Panglima besar zaman penjajahan dulu ?",
            "Apa singkatan dari KPK ?",
            "Sebutkan 5 Pahlawan Nasional ?",
            "Siapa yang membuat buku habis gelap terbitlah terang ?"
        ];

        const answers = [
            "Alm Abdurahman Wahid alias Gusdur",
            "Kerakyatan yg dipimpin oleh hikmat kebijaksanaan dalam permusyawaratan & perwakilan",
            "Jendral Soedirman ",
            "Komisi Pemberantasan Korupsi ",
            "teuku umar, imam bonjol,sisingamangaraja ,diponegoro,sultan hasanudin,patimura",
            " RA Kartini "
        ];

        let currentIndex = null;

        function showQuestion(index) {
            currentIndex = index;
            document.getElementById("questionText").innerText = questions[index];
            document.getElementById("answerText").style.display = "none";
            document.getElementById("questionBox").style.display = "block";
            document.getElementById("overlay").style.display = "block";
        }

        function showAnswer() {
            if (currentIndex !== null) {
                const answerElement = document.getElementById("answerText");
                answerElement.innerText = answers[currentIndex];
                answerElement.style.display = "block";
            }
        }

        function closeBox() {
            document.getElementById("questionBox").style.display = "none";
            document.getElementById("overlay").style.display = "none";
        }
    </script>

</body>

