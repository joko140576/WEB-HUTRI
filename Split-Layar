  <title>Display Multimedia</title>
  <style>
    body {
      margin: 0;
      background: black;
      color: white;
      font-family: Arial, sans-serif;
      overflow: hidden;
    }
    .container {
      display: flex;
      height: calc(100vh - 100px);
    }
    .left {
      flex: 1;
      background: black;
    }
    .left video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .right {
      width: 400px;
      background: black;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .right img {
      max-width: 100%;
      max-height: 100%;
    }
    .bottom {
      height: 60px;
      background: black;
      color: white;
      display: flex;
      align-items: center;
      overflow: hidden;
      white-space: nowrap;
      position: relative;
    }
    .scroll-text {
      position: absolute;
      white-space: nowrap;
      animation: scroll-left 40s linear infinite; /* ubah durasi biar lebih lambat */
      font-size: 24px;
      font-weight: bold;
    }
    @keyframes scroll-left {
      from { transform: translateX(100%); }
      to { transform: translateX(-100%); }
    }
    .controls {
      height: 40px;
      background: #222;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }
    .controls button {
      padding: 6px 14px;
      font-size: 16px;
